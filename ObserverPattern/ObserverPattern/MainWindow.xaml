<Window x:Class="ObserverPattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObserverPattern"
        xmlns:luc="clr-namespace:ObserverPattern.Controls"
        mc:Ignorable="d"
        Title="Погода" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <luc:CurrentConditionUC x:Name="ucCurrentConditions" />
        <luc:StatisticsUC x:Name="ucStatistics" Grid.Column="1" />
        <luc:ForecastUC x:Name="ucForecast" Grid.Column="2" />
    </Grid>
</Window>
